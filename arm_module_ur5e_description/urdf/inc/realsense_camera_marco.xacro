<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <!-- Define the Xacro macro -->
  <xacro:macro name="realsense_camera" params="prefix">

    <!-- Define the camera mount link -->
    <link name="${prefix}camera_mount">
      <visual>
        <geometry>
          <box size="0.05 0.05 0.02"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.05 0.05 0.02"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>

    <!-- Joint connecting the camera mount to the tool0 of the robot -->
    <joint name="${prefix}tool0_to_camera_mount" type="fixed">
      <parent link="tool0"/>
      <child link="${prefix}camera_mount"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <!-- Define the camera link -->
    <link name="${prefix}camera_link">
      <visual>
        <geometry>
          <box size="0.04 0.04 0.02"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.04 0.04 0.02"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
      </inertial>
    </link>

    <!-- Joint connecting the camera to the camera mount -->
    <joint name="${prefix}camera_joint" type="fixed">
      <parent link="${prefix}camera_mount"/>
      <child link="${prefix}camera_link"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </joint>

    <!-- Gazebo plugin for the camera sensor -->
    <gazebo>
      <sensor type="camera" name="${prefix}camera_sensor">
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.01</near>
            <far>100.0</far>
          </clip>
        </camera>
        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>30.0</updateRate>
          <cameraName>camera</cameraName>
          <imageTopicName>camera/image_raw</imageTopicName>
          <cameraInfoTopicName>camera/camera_info</cameraInfoTopicName>
          <frameName>${prefix}camera_link</frameName>
        </plugin>
      </sensor>
    </gazebo>

  </xacro:macro>
</robot>